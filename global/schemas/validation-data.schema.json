{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Validation Data",
  "description": "Schema for validation metrics and test data",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "version": {"type": "string"},
        "last_updated": {"type": "string", "format": "date"},
        "validation_seed": {"type": "string"},
        "validation_resolution": {"type": "string"},
        "total_samples": {"type": "integer"}
      }
    },
    "coordinate_ranges": {
      "type": "object",
      "properties": {
        "x": {"type": "array", "items": {"type": "number"}},
        "z": {"type": "array", "items": {"type": "number"}},
        "coverage_percentage": {"type": "number"},
        "expected_range": {"type": "array", "items": {"type": "number"}}
      }
    },
    "height_ranges": {
      "type": "object",
      "properties": {
        "min": {"type": "number"},
        "max": {"type": "number"},
        "sea_level": {"type": "number"},
        "ocean_depth": {"type": "number"},
        "mountain_height": {"type": "number"}
      }
    },
    "biome_distribution": {
      "type": "object",
      "patternProperties": {
        "^[a-z]+$": {"type": "number", "minimum": 0, "maximum": 100}
      }
    },
    "performance": {
      "type": "object",
      "properties": {
        "export_time_seconds": {"type": "number"},
        "file_size_mb": {"type": "number"},
        "samples_per_second": {"type": "number"},
        "memory_usage_mb": {"type": "number"}
      }
    }
  }
}
